# One Market Platform Configuration
# Copy this file to .env and fill in your values

# ============================================================
# EXCHANGE CONFIGURATION
# ============================================================

# Exchange API credentials (leave empty for public endpoints)
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=
EXCHANGE_TESTNET=false

# ============================================================
# RATE LIMITING
# ============================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1200
RATE_LIMIT_COOLDOWN=0.1

# ============================================================
# DATA FETCHING
# ============================================================

DEFAULT_FETCH_LIMIT=1000
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0

# ============================================================
# DATA VALIDATION
# ============================================================

ALLOW_GAPS=true
MAX_GAP_TOLERANCE=2
DUPLICATE_HANDLING=skip

# ============================================================
# STORAGE
# ============================================================

PARQUET_COMPRESSION=snappy
SCHEMA_VERSION=1.0

# ============================================================
# API CONFIGURATION
# ============================================================

API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# CORS
CORS_ORIGINS=["*"]

# ============================================================
# TRADING CONFIGURATION
# ============================================================

# Symbols and timeframes
DEFAULT_SYMBOLS=["BTC/USDT", "ETH/USDT"]
DEFAULT_TIMEFRAMES=["1h", "4h", "1d"]

# Risk management
DEFAULT_RISK_PCT=0.02
MAX_RISK_PCT=0.05
INITIAL_CAPITAL=100000.0

# Trading rules
ONE_TRADE_PER_DAY=true
SKIP_WINDOW_B_IF_A_EXECUTED=true
USE_TRADING_WINDOWS=true
USE_FORCED_CLOSE=true

# Trading windows (local time UTC-3)
WINDOW_A_START=09:00
WINDOW_A_END=12:30
WINDOW_B_START=14:00
WINDOW_B_END=17:00
FORCED_CLOSE_TIME=16:45

# ============================================================
# ENTRY BAND CONFIGURATION
# ============================================================

ENTRY_BAND_BETA=0.003
USE_VWAP_ENTRY=true

# ============================================================
# TP/SL CONFIGURATION
# ============================================================

TPSL_METHOD=atr
ATR_PERIOD=14
ATR_MULTIPLIER_SL=2.0
ATR_MULTIPLIER_TP=3.0
MIN_RR_RATIO=1.5

# ============================================================
# COMMISSION AND SLIPPAGE
# ============================================================

COMMISSION_SPOT=0.001
COMMISSION_FUTURES=0.0004
SLIPPAGE=0.0005

# ============================================================
# SCHEDULER CONFIGURATION
# ============================================================

SCHEDULER_ENABLED=false
DATA_UPDATE_INTERVAL=5
BACKTEST_SCHEDULE=0 2 * * *

# ============================================================
# PAPER TRADING
# ============================================================

PAPER_TRADING_ENABLED=true

# ============================================================
# LOGGING
# ============================================================

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_TO_FILE=true
LOG_ROTATION=100 MB
LOG_RETENTION=30 days
STRUCTURED_LOGGING=true

# ============================================================
# PERFORMANCE
# ============================================================

PERFORMANCE_TARGET_MS=1000

